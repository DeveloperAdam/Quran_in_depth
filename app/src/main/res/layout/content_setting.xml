<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:background="@color/ThemeBackground"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.depth.quran.quran_indepth.activity.activity.QuranChapterActivity"
    tools:showIn="@layout/app_bar_setting"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:weightSum="1.0">
    <TextView
        android:textAppearance="?android:textAppearanceSmall"
        android:textSize="16sp"
        android:textColor="@color/colorToolBar"
        android:padding="5.0dip"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:text="Translation"
        android:layout_weight="0.7" />
    <Switch
        android:theme="@style/ChangeColorSwitch"
        android:textSize="16dp"
        android:id="@+id/TranslationSwitch"
        android:padding="8.0dip"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:text=" On "
        android:layout_weight="0.3" />
</LinearLayout>
</LinearLayout>
